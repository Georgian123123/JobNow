<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/job_in_list_height"
    android:background="@drawable/background_item_form"
    android:orientation="horizontal"
    android:paddingBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:background="@drawable/ic_launcher_background"
            android:src="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/row_jobName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JOB TITLE" />

            <TextView
                android:id="@+id/row_jobDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/job_in_list_vertical_spacing"
                android:ellipsize="end"
                android:text="JOB DESCRIPTION" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/row_jobPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/job_in_list_vertical_spacing"
                android:paddingRight="10dp"
                android:text="90.30 RON"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/row_jobDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row_jobPrice"

                android:paddingRight="10dp"
                android:text="12.5km"
                android:textAlignment="textEnd"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>