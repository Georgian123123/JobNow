<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.createJob.CreateJobActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInput_jobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/create_job_vertical_spacing"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/job_title_length"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/create_job_label_title"
                android:maxLength="@integer/job_title_length" />

        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:background="@drawable/background_form_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|start">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInput_jobPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/big_margin"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="@integer/max_price_length"
                android:hint="@string/create_job_label_price"/>
        </com.google.android.material.textfield.TextInputLayout>


            <Spinner
                android:id="@+id/spinnerInput_currency"
                android:layout_width="@dimen/currency_spinner_width"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:id="@+id/textView_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginTop="@dimen/create_job_vertical_spacing"
            android:text="@string/create_job_label_category"
            android:textColor="?android:textColorHint"
            android:textSize="@dimen/label_font_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/background_form_item"
            android:orientation="horizontal"
            android:padding="@dimen/big_padding">


            <ImageButton
                android:id="@+id/button_addCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_sumbit"
                android:onClick="userEditsJobCategory"
                android:padding="@dimen/big_padding"
                android:src="@drawable/ic_add_white_24dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_categoty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/recycleview_right_padding"
                android:layout_toStartOf="@+id/button_addCategory"
                android:foregroundGravity="center"
                android:orientation="horizontal" />


        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInput_jobCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:errorEnabled="true" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInput_jobDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_job_label_description"
            android:paddingTop="@dimen/create_job_vertical_spacing"
            app:counterEnabled="true"
            app:counterMaxLength="@integer/job_description_length"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:hint="@string/create_job_description_placeholder"
                android:lines="@integer/job_description_lines"
                android:maxLength="@integer/job_description_length"
                android:textColorHint="@drawable/text_layout_invisible_label" />
        </com.google.android.material.textfield.TextInputLayout>





        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/button_sumbit"
            android:onClick="userCreatesJob"
            android:text="@string/create_job_button_text"
            android:textAllCaps="false"
            android:layout_marginBottom="50dp"

            android:textSize="@dimen/submit_button_font_size" />
    </LinearLayout>


</ScrollView>